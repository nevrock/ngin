#!/usr/bin/env python3

import os
import argparse
import subprocess

from nevf import nevf

from nevsc import test

def main():
    parser = argparse.ArgumentParser(description="Load a dictionary file.")
    parser.add_argument('-f', '--file', type=str, help="Test file to read")  # Positional argument
    #parser.add_argument('-n', '--name', type=str, help="Name of the new project")  # Positional argument
    args = parser.parse_args()

    dict = nevf.Nevf()
    if args.file:
        dict.set('file', args.file)

    #if args.name:
    #    dict.set('name', args.name)
        
    dict.write(os.path.join(os.getcwd(), '.nevsc'))

    # Execute subprocess command
    result = subprocess.run("blendsc /home/nev/program/ngin/bin/nevsc_blend.py", shell=True, cwd=os.getcwd(), env=os.environ)
    # print(result.stdout)

if __name__ == "__main__":
    main()
#version 330 core
out vec4 FragColor;
in vec3 WorldPos;

uniform vec3 color1; // First color of the gradient
uniform vec3 color2; // Second color of the gradient

void main()
{		
    vec3 col1 = vec3(1.0, 0.5, 0.31);
    vec3 col2 = vec3(0.1, 0.1, 0.1);
    vec3 normalizedPos = normalize(WorldPos);
    vec3 color = mix(col1, col2, normalizedPos.y * 0.5 + 0.5); // Interpolate between color1 and color2 based on y position
    FragColor = vec4(color, 1.0);
}
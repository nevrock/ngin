
layout (location=0) out vec4 FragColor;

in vec2 TexCoords;

uniform sampler2D text;
uniform bool isText;

void main()
{                        
    if (isText) {
        vec4 sampled = vec4(1.0, 1.0, 1.0, texture(text, TexCoords).r);
        FragColor = vec4(0.0, 0.0, 0.0, 1.0) * sampled;
    } else {
        FragColor = vec4(1.0, 1.0, 1.0, 1.0);
    }
}

layout (location = 0) in vec3 aPos;
layout (location = 2) in vec2 aTexCoords;

out vec2 TexCoords;

uniform mat4 model;
uniform bool isText;

uniform mat4 projection;

void main() {
    if (isText) {
        gl_Position = projection * vec4(aPos.xy, 0.0, 1.0);
    } else {
        gl_Position = model * vec4(aPos, 1.0);
    }

    TexCoords = aTexCoords;
}

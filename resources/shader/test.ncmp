#version 430 core

layout (local_size_x = 16, local_size_y = 16) in;

layout (binding = 0, rgba32f) uniform image2D img_output;

void main() {
    ivec2 pixel_coords = ivec2(gl_GlobalInvocationID.xy);
    vec4 pixel = imageLoad(img_output, pixel_coords);
    pixel.r = 1.0; // Invert the red channel
    imageStore(img_output, pixel_coords, vec4(0.0, 1.0, 0.0, 1.0));
}
